# Google Cloud Platform Configuration
# Copia este archivo a .env y configura tus valores

# ID del proyecto de GCP
GCP_PROJECT_ID=tu-proyecto-id

# Región y zona de GCP
GCP_REGION=us-central1
GCP_ZONE=us-central1-a

# Ruta al archivo de credenciales del service account
GCP_CREDENTIALS_FILE=$HOME/.gcp/credentials.json

# Configuración del Cluster
GKE_CLUSTER_NAME=todoapp-autoscaling-cluster

# Configuración de Autoscaling
# Nodos
MIN_NODES=2
MAX_NODES=10

# Backend Pods
BACKEND_MIN_REPLICAS=2
BACKEND_MAX_REPLICAS=10
BACKEND_CPU_TARGET=50
BACKEND_MEM_TARGET=70

# Frontend Pods
FRONTEND_MIN_REPLICAS=2
FRONTEND_MAX_REPLICAS=8
FRONTEND_CPU_TARGET=60
FRONTEND_MEM_TARGET=75

# Namespace de Kubernetes
APP_NAMESPACE=todoapp

# Docker Registry (GCR)
DOCKER_REGISTRY=gcr.io/${GCP_PROJECT_ID}
IMAGE_TAG=latest
